{
  "env": {
    "EDITOR": "vim",
    "LANG": "ja_JP.UTF-8",
    "LC_ALL": "ja_JP.UTF-8"
  },
  "permissions": {
    "bash": "allow",
    "edit": "allow",
    "read": "allow",
    "write": "allow",
    "webFetch": "allow",
    "webSearch": "allow",
    "grep": "allow",
    "glob": "allow",
    "ls": "allow"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/commands/notify-completion.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/commands/notify-waiting-input.sh"
          }
        ]
      }
    ]
  },
  "commandsDirectory": "~/.claude/commands"
}
